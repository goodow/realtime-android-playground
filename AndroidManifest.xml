<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goodow.realtime.android.playground"
    android:versionCode="14"
    android:versionName="0.5.5-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.goodow.realtime.android.playground.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.goodow.realtime.android.playground.CollaborativeListActivity" >
        </activity>
        <activity android:name="com.goodow.realtime.android.playground.CollaborativeMapActivity" >
        </activity>
        <activity android:name="com.goodow.realtime.android.playground.CollaborativeStringActivity" >
        </activity>
    </application>

</manifest>